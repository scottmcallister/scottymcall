<h1>New Article</h1>

<%= form_with url: "/dashboard/create", method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.rich_textarea :content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
