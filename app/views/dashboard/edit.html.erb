<h1>Edit Article</h1>

<%= form_with url: "/dashboard/#{@article.id}", method: :put, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, value: @article.name %>
  </div>

  <div>
    <%= form.label :category %>
    <%= form.text_field :category, value: @article.category %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, value: @article.content %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
